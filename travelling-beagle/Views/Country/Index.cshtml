@model CountryModel
@{
    ViewData["Title"] = "Country";
    int imageRowSize = (int)Math.Sqrt(Model.Images.Count);
}

@section Styles {
    <link rel="stylesheet" href="~/css/country.css" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/country.js"></script>
}

<div class="row">
    <div class="six columns name">
        <h1>
            @Model.Name
        </h1>
    </div>
    <div class="six columns name">
        <h2>
            @Model.CapitalCity.Name
        </h2>
        <h2>
            @Model.CapitalCity.LocalizedDateTime.ToShortDateString()
            @Model.CapitalCity.LocalizedDateTime.ToShortTimeString()
        </h2>
        <h2>
            @Model.CapitalCity.DegreesInCelsius &#176; C
        </h2>
    </div>
</div>

<div class="row">
    <div class="one-half column">
        @for(int i = 0; i < imageRowSize; i++)
        {
            <div class="row">
                @for (int j = 0; j < imageRowSize; j++)
                {
                    <div class="one-third column country-image @(i > 0 ? "desktop-only" : "")">
                        <image class="country-image-src u-max-full-width" src="@Model.Images[i * imageRowSize + j]" />
                    </div>
                }
            </div>
        }
    </div>

    <div class="one-half column travel-advisories">
        <h2>Travel Advisories</h2>
        <table>
            <tr>
                <td><h3>Canada</h3></td>
                <td><a href="https://travel.gc.ca/destinations/iceland">Exercise normal security precautions</a></td>
            </tr>
            <tr>
                <td><h3>USA</h3></td>
                <td><a href="https://travel.state.gov/content/passports/en/country/iceland.html">Iceland Information</a></td>
            </tr>
            <tr>
                <td><h3>UK</h3></td>
                <td><a href="https://www.gov.uk/foreign-travel-advice/iceland">Iceland Travel Advice</a></td>
            </tr>
        </table>
    </div>
</div>

<div class="row">
    <div class="one-half column">
        <h2>Reddit Discussions</h2>
        <ul class="external-links">
            @foreach (var link in Model.RedditDiscussionLinks)
            {
                <li><a href="@link.Url">@link.Title</a></li>
            }
        </ul>
    </div>

    <div class="one-half column">
        <h2>Reddit Links</h2>
        <ul class="external-links">
            @foreach (var link in Model.RedditLinks)
            {
                <li><a href="@link.Url">@link.Title</a></li>
            }
        </ul>
    </div>
</div>

<div id="overlay">
    <span id="overlayX">X</span>
    <img id="overlayImage" />
</div>